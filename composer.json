{
    "name": "iserter/cakephp-postman-generator",
    "description": "Generate a Postman collection from registered CakePHP routes",
    "type": "cakephp-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Ilyas Serter",
            "email": "iserter@example.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Iserter\\PostmanGenerator\\": "src/"
        }
    },
    "require": {
        "php": ">=7.4",
        "cakephp/core": "^4.0 || ^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "cakephp/cakephp": "^5.2",
        "cakephp/cakephp-codesniffer": "^5.0",
        "phpstan/phpstan": "^1.11",
        "mikey179/vfsstream": "^1.6"
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs src tests",
        "format": "phpcbf src tests",
        "analyse": "phpstan analyse",
        "coverage": "phpunit --coverage-text --coverage-clover build/logs/clover.xml"
    },
    "extra": {
        "installer-name": "CakephpPostmanGenerator"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
